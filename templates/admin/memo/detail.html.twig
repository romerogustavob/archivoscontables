{% block detail_fields %}
    <div class="container mx-auto" style="max-width: 800px;">
        <div class="card bg-white overflow-hidden">
            <div class="card-header px-4 py-3 border-bottom">
                <h3 class="card-title mb-0 h5 fw-bold">Detalles del Memo</h3>
            </div>
            <div class="card-body p-0 shadow-lg">
                <dl class="mb-0">
                    <!-- Fecha de emisión -->
                    <div class="row g-0 bg-light p-4">
                        <dt class="col-md-4 text-muted fw-normal">Fecha de emisión</dt>
                        <dd class="col-md-8">{{ entity.instance.createdAt|date('d/m/Y') }}</dd>
                    </div>
                    
                    <!-- Estado -->
                    <div class="row g-0 p-4">
                        <dt class="col-md-4 text-muted fw-normal">Estado</dt>
                        <dd class="col-md-8">
                            <span class="badge bg-primary bg-opacity-10 text-primary p-3">
                                {{ entity.instance.estado }}
                            </span>
                        </dd>
                    </div>
                    
                    <!-- Usuario -->
                    <div class="row g-0 bg-light p-4">
                        <dt class="col-md-4 text-muted fw-normal">Usuario</dt>
                        <dd class="col-md-8">{{ entity.instance.usuario }}</dd>
                    </div>
                    
                    <!-- Ítems del Memo -->
                    <div class="row g-0 p-4">
                        <dt class="col-md-4 text-muted fw-normal">Ítems del Memo</dt>
                        <dd class="col-md-8">
                            <div class="border rounded p-3 bg-white">
                                {{ entity.instance.lineItems|join(', ') }}
                            </div>
                        </dd>
                    </div>
                </dl>
            </div>
        </div>
    </div>
{% endblock %}