{% extends '@EasyAdmin/crud/detail.html.twig' %}

{% block content_title %}
    <div class="text-center mb-4">
        <h1 class="display-6 fw-bold">Memo Número {{ entity.instance.id }}</h1>
    </div>
{% endblock %}

{% block detail_fields %}
    <div class="container mx-auto" style="max-width: 800px;">
        <div class="card bg-white overflow-hidden">
            <div class="card-header px-4 py-3 border-bottom">
                <h3 class="card-title mb-0 h5 fw-bold">Detalles del Memo</h3>
            </div>
            <div class="card-body p-0 shadow-lg">
                <dl class="mb-0">
                    <!-- Fecha de emisión -->
                    <div class="row g-0 bg-light p-4">
                        <dt class="col-md-4 text-muted fw-normal">Fecha de emisión</dt>
                        <dd class="col-md-8">{{ entity.instance.createdAt|date('d/m/Y') }}</dd>
                    </div>
                    
                    <!-- Estado -->
                    <div class="row g-0 p-4">
                        <dt class="col-md-4 text-muted fw-normal">Estado</dt>
                        <dd class="col-md-8">
                            <span class="badge bg-primary bg-opacity-10 text-primary p-3">
                                {{ entity.instance.estado }}
                            </span>
                        </dd>
                    </div>
                    
                    <!-- Usuario -->
                    <div class="row g-0 bg-light p-4">
                        <dt class="col-md-4 text-muted fw-normal">Usuario</dt>
                        <dd class="col-md-8">{{ entity.instance.usuario }}</dd>
                    </div>
                    
                    <!-- Ítems del Memo -->
                    <div class="row g-0 p-4">
                        <dt class="col-md-4 text-muted fw-normal">Ítems del Memo</dt>
                        <dd class="col-md-8">
                            <div class="table-responsive">
                                <table class="table table-bordered table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Descripción</th>
                                            <th>Detalle</th>
                                            <th>Período</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% if entity.instance.lineItems is not empty %}
                                            {% for item in entity.instance.lineItems %}
                                                <tr>
                                                    <td>{{ item.item.descripcion ?? 'N/A' }}</td>
                                                    <td>{{ item.descripcionAdicional is defined ? item.descripcionAdicional : 'N/A' }}</td>
                                                    <td>
                                                        {% if item.periodo is defined and item.periodo is not null %}
                                                            {{ item.periodo|date('m/Y') }} {# Formatea la fecha como Mes/Año #}
                                                        {% else %}
                                                            N/A
                                                        {% endif %}
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        {% else %}
                                            <tr>
                                                <td colspan="3" class="text-center text-muted">No hay ítems registrados</td>
                                            </tr>
                                        {% endif %}
                                    </tbody>
                                </table>
                            </div>
                        </dd>
                    </div>
                </dl>
            </div>
        </div>
    </div>
{% endblock %}