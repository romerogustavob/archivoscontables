<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <style>
        body { 
            font-family: Arial, sans-serif; 
            margin: 0;
            padding: 20px;
        }
        .info-table {
            width: 100%;
            margin-bottom: 20px;
        }
        .info-table td {
            padding: 2px 0;
            vertical-align: top;
        }
        .items-table {
            width: 100%;
            border-collapse: collapse;
            margin: 15px 0 30px;
        }
        .items-table th, .items-table td {
            border: 1px solid #000;
            padding: 8px;
            text-align: left;
        }
        .items-table th {
            background-color: #f2f2f2;
        }
        .signature-section {
            margin-top: 40px;
            width: 100%;
        }
        .signature-line {
            border-top: 1px solid #000;
            width: 100%;
            margin: 40px 0 5px;
        }
        .signature-label {
            font-weight: bold;
        }
        .company-name {
            margin-top: 30px;
            font-weight: bold;
        }
        .page-break {
            page-break-after: always;
        }
    </style>
</head>
<body>
    <!-- Primera página -->
    <div>
        <img src="{{ logoSrc }}" alt="Logo" style="width: 20px; height:auto;">
    </div>

    <table class="info-table">
        <tr>
            <td width="50%"></td>
            <td><strong>Fecha :</strong> {{ memo.createdAt|date('d/m/Y') }}</td>
        </tr>
        <tr>
            <td></td>
            <td><strong>Estado :</strong> {{ memo.estado }}</td>
        </tr>
        <tr>
            <td></td>
            <td><strong>Cliente :</strong> {{ nombre }}</td>
        </tr>
    </table>

    <table class="items-table">
        <thead>
            <tr>
                <th>descripción</th>
                <th>Detalle</th>
                <th>Período</th>
            </tr>
        </thead>
        <tbody>
            {% for item in memo.lineItems %}
            <tr>
                <td>{{ item.item.descripcion }}</td>
                <td>{{ item.descripcionAdicional }}</td>
                <td>{{ item.periodo ? item.periodo|date('m/Y') : '' }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="signature-section">
        <div class="signature-line"></div>
        <div class="signature-label">Firma y aclaración</div>
    </div>


    <!-- Segunda página (réplica) -->
    <div class="page-break"></div>
    <div>
        <img src="{{ logoSrc }}" alt="Logo" style="width: 20px; height:auto;">
    </div>
   
    <table class="info-table">
        <tr>
            <td width="50%"></td>
            <td><strong>Fecha :</strong> {{ memo.createdAt|date('d/m/Y') }}</td>
        </tr>
        <tr>
            <td></td>
            <td><strong>Estado :</strong> {{ memo.estado }}</td>
        </tr>
        <tr>
            <td></td>
            <td><strong>Cliente :</strong> {{ nombre }}</td>
        </tr>
    </table>

    <table class="items-table">
        <thead>
            <tr>
                <th>Detalle</th>
                <th>Desc. Adicional</th>
                <th>Período</th>
            </tr>
        </thead>
        <tbody>
            {% for item in memo.lineItems %}
            <tr>
                <td>{{ item.item.descripcion }}</td>
                <td>{{ item.descripcionAdicional }}</td>
                <td>{{ item.periodo ? item.periodo|date('m/Y') : '' }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="signature-section">
        <div class="signature-line"></div>
        <div class="signature-label">Firma y aclaración</div>
    </div>
</body>
</html>